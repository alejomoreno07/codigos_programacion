#include <bits/stdc++.h>
using namespace std;

int main(){
	ios_base::sync_with_stdio(false);
	int N,d;
	while(cin>>N){
		vector<int> p;
		while(N--){
			cin>>d;
			p.push_back(d);
		}
		vector<int> sub_ans;
		long long int acumm=0;
		for(int i=0;i<p.size()-1;i++){
			if(p[i]>p[i+1]){
				if(acumm!=0) sub_ans.push_back(acumm);
				sub_ans.push_back(-1);
				acumm=0;
			}
			else{
				acumm++;
			}
		}
		if(acumm>0) sub_ans.push_back(acumm);
		if(sub_ans.size()==0) sub_ans.push_back(0);
		long long int ans=0;
		bool flag=false;
        long long int subadd1=0,subadd2=0;
        for(int i=0;i<sub_ans.size();i++){
        	if(!flag && sub_ans[i]!=-1){
        		subadd1+=sub_ans[i];
        	}
        	else if(flag && sub_ans[i]!=-1){
        		subadd2+=sub_ans[i];
        	}
        	else if(flag && sub_ans[i]==-1){
        		if(subadd1==0) subadd2++;
        		ans=max(ans,subadd1+subadd2+1);
        		subadd1=subadd2-1;
        		subadd2=0;
        		flag=false;
        	}
        	else if(!flag && sub_ans[i]==-1){
        		flag=true;
        		subadd2++;
        	}
        }
        if(flag || subadd2!=0 || ans==0) {
        	ans=max(ans,subadd1+subadd2+1);
        }
        cout<<ans<<endl;
	}
	return 0;
}
